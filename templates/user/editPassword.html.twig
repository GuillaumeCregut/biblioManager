{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Mon  profil
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block body %}
	<div class="pass-main-container">
		{{ form_start(form) }}
		{{ form_row(form.old_password) }}
		{{ form_row(form.new_password) }}
		{{ form_row(form.confirm_password) }}
		<button class="btn btn-primary">Valider</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
