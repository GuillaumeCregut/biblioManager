{% extends 'base.html.twig' %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('styles/admin/admin.css') }}">
{% endblock %}
{% block title %}
	{{ parent() }}
	- Admin
{% endblock %}

{% block body %}
	<div class="admin-container">
		<div class="left-menu">
			<nav class="admin-menu">
				<ul class="admin-list">
					<li class="admin-item">
						<a href="{{path('library_index')}}" class="admin-link  {% if app.request.attributes.get('_route')=='library_index' %}active-link{% endif %}">Bibliothèques</a>
					</li>
					<li class="admin-item">
						<a href="" class="admin-link  {% if app.request.attributes.get('_route')=='admin_index' %}active-link{% endif %}">Etagères</a>
					</li>
					<li class="admin-item">
						<a href="{{ path('author_index')}}" class="admin-link {% if app.request.attributes.get('_route')=='author_index' %}active-link{% endif %}">Auteurs</a>
					</li>
					<li class="admin-item">
						<a href="{{ path('editor_index')}}" class="admin-link {% if app.request.attributes.get('_route')=='editor_index' %}active-link{% endif %}">Editeurs</a>
					</li>
					<li class="admin-item">
						<a href="{{path('theme_index')}}" class="admin-link {% if app.request.attributes.get('_route')=='theme_index' %}active-link{% endif %}">Thèmes</a>
					</li>
					<li class="admin-item">
						<a href="" class="admin-link {% if app.request.attributes.get('_route')=='admin_index' %}active-link{% endif %}">Livres</a>
					</li>
				</ul>
			</nav>
		</div>
		<div class="page-content">
			{% for label, messages in app.flashes(['success','warning']) %}
			    {% for message in messages %}
				<div class="flash-notice flash-{{ label }}">
					{{ message }}
				</div>
				{% endfor %}
			{% endfor %}
			{% block RightPage %}{% endblock %}
		</div>
	</div>
{% endblock %}
