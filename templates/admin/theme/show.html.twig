{% extends 'admin/baseAdmin.html.twig' %}
{% block stylesheets %}
	{{ parent()}}
	<link rel="stylesheet" href="{{ asset('styles/admin/theme/index.css')}}">
{% endblock %}
{% block RightPage %}
   <a href="{{ path('theme_index') }}" class="btn btn-secondary">Retour</a>
    <h1>Informations sur le thème "{{ theme.name }}"</h1>
    <div class="book-theme-container">
    <p>Liste des livres associés</p>
     <ul class="book-theme-list">
        {% for book in theme.books %}
        <li class="book-theme-item">{{ book.title }}</li>   
        {% endfor %}
        </ul>
        </div>
       
    <a href="{{ path('theme_edit', {'id': theme.id}) }}" class="btn btn-primary">Modifier</a>
    {{ include('admin/theme/_delete_form.html.twig') }}
{% endblock %}
