{% extends 'admin/baseAdmin.html.twig' %}
{% block stylesheets %}
	{{ parent()}}
	<link rel="stylesheet" href="{{ asset('styles/admin/theme/index.css')}}">
{% endblock %}
{% block RightPage %}
    <h1>Theme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="theme-name-col">Nom</th>
                <th class="theme-action">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td  class="theme-name-col">{{ theme.name }}</td>
                <td class="theme-action-col">
                    <a href="{{ path('theme_show', {'id': theme.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('theme_edit', {'id': theme.id}) }}" class="btn btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun thème trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('theme_new') }}" class="btn btn-primary">Créer un nouveau</a>
{% endblock %}
